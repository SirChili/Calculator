#include <iostream>
#include <vector>
#include <cmath> // doing this to get the hang of cmath

// In C++, addition and subtraction all happen after division and multiplication

//ISO C++14 Standard is the version of C++ I'm using

using namespace std;

void addition() {

	int num1 = 0;
	int num2 = 0;
	system("cls");
	cout << "Enter First Number: \n";
	cin >> num1;
	system("cls");
	cout << "Enter Second Number: \n";
	cout << num1 << " + ";
	cin >> num2;
	double total = num1 + num2;
	system("cls");
	cout << num1 << " + " << num2 << " = " << total << '\n';

}
void subtraction() {

	int num1 = 0;
	int num2 = 0;
	system("cls");
	cout << "Enter First Number: \n";
	cin >> num1;
	system("cls");
	cout << "Enter Second Number: \n";
	cout << num1 << " - ";
	cin >> num2;
	double total = num1 - num2;
	system("cls");
	cout << num1 << " - " << num2 << " = " << total << '\n';


}
void multiplication() {

	int num1 = 0;
	int num2 = 0;
	system("cls");
	cout << "Enter First Number: \n";
	cin >> num1;
	system("cls");
	cout << "Enter Second Number: \n";
	cout << num1 << " x ";
	cin >> num2;
	double total = num1 * num2;
	system("cls");
	cout << num1 << " x " << num2 << " = " << total << '\n';

}
void division() {

	int num1 = 0;
	int num2 = 0;
	system("cls");
	cout << "Enter First Number: \n";
	cin >> num1;
	system("cls");
	cout << "Enter Second Number: \n";
	cout << num1 << " / ";
	cin >> num2;
	double total1 = num1 / num2;
	double total2 = num1 % num2;
	system("cls");
	cout << num1 << " / " << num2 << " = " << total1 << '\n';
	cout << "Remainder Of " << total2 << "\n";

}
void squareRoot() {

	int num1 = 0;

	system("cls");
	cout << "Enter Number: \n";
	cin >> num1;
	system("cls");
	
	double total = sqrt(num1);

	cout << "_/" << num1 << " = " << total;

}
void quadraticOne() {
	// Formula: x = −(b) ± √ b^2 − 4ac / 2a

	double a,b,c;
	
	cout << "Choose A, B, C\n";
	cin >> a; cin >> b; cin >> c;

	double numerator = sqrt(pow((b), 2) - (4 * a * c));
	
	double rootOne = (-b + numerator) / (2 * a);
	double rootTwo = (-b - numerator) / (2 * a);

	cout << "{" << rootOne << "," << rootTwo << "}" << '\n';

}
 
