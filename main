void radicalEquations() {

	double a = 0;
	double b = 0;
	double x = 0;

	double radical = a * (x) * b;

}


int main() {

	int choice;
	
	cout << "1. Addition \n2. Subtraction\n3. Multiplication\n4. Division\n5. Square Root\n6. Quadratic\n7. Radical Equations\n\nEnter By Number.\n";
	cin >> choice;


	// Think of a better was rather than a ton of if statements
	if (choice == 1) { system("cls");  addition(); main(); }
	if (choice == 2) { system("cls"); subtraction(); }
	if (choice == 3) { system("cls"); multiplication(); }
	if (choice == 4) { system("cls"); division(); }
	if (choice == 5) { system("cls"); squareRoot(); }
	if (choice == 6) { system("cls"); quadraticOne(); }
	if (choice == 7) { system("cls"); radicalEquations(); }
	if (choice > 7 || choice < 1) { system("cls"); cout << "Invalid Input.\n\n"; main(); }

}
